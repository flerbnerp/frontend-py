<QuestionInterface>
    # variable_name:variable_value # example declaration
    
    GridLayout:
        cols:1
        size: root.width, root.height
        #########################################################
        GridLayout: # Header Bar with menu
            cols:3
            Button: # Ham Menu
                text:"MENU"
                size_hint_x: None

            Label: # question properties (ie subject, revision date, etc)
                text:"This is some metadata about the question"
            Label: # relevant stats
                text:"These are some relevant stats"
#########################################################
# Main Body
        Label:
            text:"This is a question"
        Label:
            text:"This is question media"
        Label:
            text:"This is an answer"
        Label:
            text:"This is answer media"


        #########################################################
        GridLayout: # User Input section
            cols:2
            size_hint_y: None
            height: "150dp"
            TextInput:
                multiline:True
            Button:
                text:"Next"
                size_hint_x: None
                width: "40dp"
        #########################################################
        BoxLayout: # Score Bar
            size_hint_y: None
            height: "40dp"
            Button: # Yes
                text:"Yes"
            Button: # No
                text:"No"
            Button: # Skip
                text: "Skip"


