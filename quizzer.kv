<Label>
    font_name: "fonts/arialuni.ttf"
<Button>
    font_name: "fonts/arialuni.ttf"
<TextInput>
    font_name: "fonts/arialuni.ttf"
<QuestionInterface>
    # Variable declarations
    # Header Variables
    ham_menu:ham_menu
    question_data:question_data
    stats_feed:stats_feed

    # Main Body Variables
    question_text:question_text
    question_media:question_media
    answer_text:answer_text
    answer_media:answer_media

    # Scoring and input variables
    user_input:user_input

    canvas.before:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols:1
        size: root.width, root.height
        #########################################################
        GridLayout: # Header Bar with menu
            cols:3
            size_hint_y: None
            height: "50dp"
            Button: # Ham Menu
                text:"MENU"
                size_hint_x: None
                width: "40dp"
                id:ham_menu

            Label: # question properties (ie subject, revision date, etc)
                text:"This is some metadata about the question"
                id: question_data
                text_size: self.width, self.height
                valign: "top"
                halign: "left"
                

            Label: # relevant stats
                text:"These are some relevant stats"
                id: stats_feed
                size_hint_x: None
                text_size: self.width, self.height
                valign: "top"
                halign: "left"
#########################################################
# Main Body
        GridLayout:
            cols:2
            Label:
                text:"This is a question"
                id: question_text
                text_size: self.width, self.height
                font_size: "16pt"
                valign: "top"
                halign: "left"            
            Image:
                source: ""
                id: question_media
                #text_size: self.width, self.height
                
                valign: "top"
                halign: "left"  
            Label:
                text:""
                id:answer_text
                text_size: self.width, self.height
                font_size: "16pt"
                valign: "top"
                halign: "left"              
            Image:
                source: ""
                id:answer_media
                background_color: (0, 0, 0, 1)
                # text_size: self.width, self.height
                valign: "top"
                halign: "left"  

        #########################################################
        GridLayout: # User Input section
            cols:2
            size_hint_y: None
            height: "80dp"
            TextInput:
                multiline:True
                id:user_input
                size_hint_y: None
                height: "80dp"
            Button:
                text:"Show"
                size_hint_x: None
                size_hint_y: None
                width: "60dp"
                height: "80dp"
                on_press: root.show_answer()
        #########################################################
        BoxLayout: # Score Bar
            size_hint_y: None
            height: "40dp"
            Button: # Yes
                text:"Yes"
                on_press: root.question_correct()
            Button: # No
                text:"No"
                on_press: root.question_incorrect()
            Button: # Skip
                text: "Skip"
                on_press: root.question_skip()


